{
  "name": "beard",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"yarn:tsc:watch\" \"yarn:js:watch\" \"yarn:sass:watch\" \"yarn:serve\"",
    "tsc:watch": "tsc -w",
    "js:watch": "watchify --s beard build/main.js -o build/bundle.js",
    "sass:watch": "sass --watch assets/scss/main.scss assets/css/main.css",
    "serve": "live-server --watch=build/bundle.js,./index.html,./assets/css/main.css",
    "build": "browserify --s beard build/main.js | uglifyjs -c -m -o dist/beard.min.js && ./bin/build-html",
    "evaluator:console": "ts-node src/boolean-expression-evaluator/console.ts"
  },
  "devDependencies": {
    "@types/hammerjs": "^2.0.41",
    "@types/node": "^20.7.0",
    "browserify": "^17.0.0",
    "concurrently": "^7.6.0",
    "live-server": "1.2.1",
    "sass": "^1.62.1",
    "ts-node": "^10.9.1",
    "tsc": "^2.0.4",
    "typescript": "^5.1.3",
    "uglify-js": "^3.17.4",
    "watchify": "^4.0.0"
  },
  "dependencies": {
    "@hpcc-js/wasm": "^2.12.0",
    "hammerjs": "^2.0.8",
    "svg-pan-zoom": "^3.6.1"
  }
}
